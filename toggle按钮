<button id="get-value-btn">è·å–å½“å‰é€‰ä¸­çš„å€¼</button>

<p>å½“å‰å€¼ï¼š<span id="current-value"></span></p>

// âœ… åˆå§‹å€¼
let currentValue = "A";

// åˆå§‹åŒ–å‡½æ•°ï¼Œæ ¹æ® currentValue è®¾ç½® active
function initializeToggle() {
  document.querySelectorAll(".toggle-btn").forEach(btn => {
    if (btn.dataset.value === currentValue) {
      btn.classList.add("active");
    } else {
      btn.classList.remove("active");
    }
  });
  document.getElementById("current-value").textContent = currentValue;
}

// toggleæŒ‰é’®ç‚¹å‡»äº‹ä»¶
document.querySelectorAll(".toggle-btn").forEach(btn => {
  btn.addEventListener("click", () => {
    document.querySelectorAll(".toggle-btn").forEach(b => b.classList.remove("active"));
    btn.classList.add("active");
    currentValue = btn.dataset.value;
    document.getElementById("current-value").textContent = currentValue;
  });
});

// ğŸ‘‰ æ–°æŒ‰é’®ç‚¹å‡»æ—¶ï¼Œè·å–å½“å‰æ´»è·ƒæŒ‰é’®çš„å€¼
document.getElementById("get-value-btn").addEventListener("click", () => {
  const activeBtn = document.querySelector(".toggle-btn.active");
  if (activeBtn) {
    alert("å½“å‰é€‰ä¸­çš„æ˜¯ï¼š" + activeBtn.dataset.value);
  } else {
    alert("æ²¡æœ‰é€‰ä¸­çš„æŒ‰é’®");
  }
});

// åˆå§‹æ‰§è¡Œ
initializeToggle();
