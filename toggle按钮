
.toggle-btn {
  padding: 10px 20px;
  margin: 5px;
  border: 1px solid #ccc;
  background-color: white;
  cursor: pointer;
}

.toggle-btn.active {
  background-color: dodgerblue;
  color: white;
  border-color: dodgerblue;
}

